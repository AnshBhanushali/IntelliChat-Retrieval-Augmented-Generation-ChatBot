{
    "compilerOptions": {
      "target": "es6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "types": ["react", "react-dom", "node"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "sourceMap": true,
      "outDir": "./dist/",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
  }
  